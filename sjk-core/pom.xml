  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.gridkit.jvmtool</groupId>
    <artifactId>jvmtool-umbrella-pom</artifactId>
    <version>0.21-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>sjk-core</artifactId>
  <name>${project.groupId}::${project.artifactId}</name>
  <description>Core classes for Swiss Java Knife tool</description>

  <dependencies>
    <dependency>
      <groupId>org.gridkit.jvmtool</groupId>
      <artifactId>sjk-cli</artifactId>
    </dependency>
    <dependency>
      <groupId>org.gridkit.jvmtool</groupId>
      <artifactId>sjk-stacktrace</artifactId>
    </dependency>
    <dependency>
      <groupId>org.gridkit.jvmtool</groupId>
      <artifactId>sjk-hflame</artifactId>
    </dependency>
    <dependency>
      <groupId>org.perfkit.sjk.parsers</groupId>
      <artifactId>sjk-jfr5</artifactId>
    </dependency>
    <dependency>
      <groupId>org.perfkit.sjk.parsers</groupId>
      <artifactId>sjk-jfr6</artifactId>
    </dependency>
    <dependency>
      <groupId>org.perfkit.sjk.parsers</groupId>
      <artifactId>sjk-jfr-standalone</artifactId>
    </dependency>
    <dependency>
      <groupId>org.perfkit.sjk.parsers</groupId>
      <artifactId>sjk-nps</artifactId>
    </dependency>
    <dependency>
      <groupId>org.gridkit.lab</groupId>
      <artifactId>jvm-attach-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.gridkit.jvmtool</groupId>
      <artifactId>sjk-agent</artifactId>
    </dependency>
    <dependency>
      <groupId>org.gridkit.jvmtool</groupId>
      <artifactId>sjk-test</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.assertj</groupId>
      <artifactId>assertj-core</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.carrotsearch</groupId>
      <artifactId>junit-benchmarks</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <profiles>
    <profile>
      <id>RunCliCheckJava6</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <executions>
              <execution>
                <id>CliCheckJ6</id>
                <goals>
                  <goal>test</goal>
                </goals>
                <phase>test</phase>
              </execution>
            </executions>
            <configuration>
              <forkCount>1.5C</forkCount>
              <reuseForks>false</reuseForks>
              <includes>
                <include>**/CliCheck.java</include>
              </includes>
              <jdkToolchain>
                <version>1.6</version>
              </jdkToolchain>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>RunCliCheckJava8</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <executions>
              <execution>
                <id>CliCheckJ8</id>
                <goals>
                  <goal>test</goal>
                </goals>
                <phase>test</phase>
              </execution>
            </executions>
            <configuration>
              <forkCount>1.5C</forkCount>
              <reuseForks>false</reuseForks>
              <includes>
                <include>**/CliCheck.java</include>
              </includes>
              <jdkToolchain>
                <version>1.8</version>
                <verdor>OpenJDK</verdor>
              </jdkToolchain>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>RunCliCheckJava11</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <executions>
              <execution>
                <id>CliCheckJ11</id>
                <goals>
                  <goal>test</goal>
                </goals>
                <phase>test</phase>
              </execution>
            </executions>
            <configuration>
              <forkCount>1.5C</forkCount>
              <reuseForks>false</reuseForks>
              <includes>
                <include>**/CliCheck.java</include>
              </includes>
              <jdkToolchain>
                <version>11</version>
                <verdor>OpenJDK</verdor>
              </jdkToolchain>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>RunCliCheckDefaultJava</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <executions>
              <execution>
                <id>CliCheckJX</id>
                <goals>
                  <goal>test</goal>
                </goals>
                <phase>test</phase>
              </execution>
            </executions>
            <configuration>
              <forkCount>1.5C</forkCount>
              <reuseForks>false</reuseForks>
              <includes>
                <include>**/CliCheck.java</include>
              </includes>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

</project>
